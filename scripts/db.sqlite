CREATE TABLE Stations (
  _id   PRIMARY KEY, 
  name  varchar(255) NOT NULL 
);
  
CREATE TABLE StationMovables (
  statid int NOT NULL,
  movableid varchar(10) NOT NULL,
  coming time,
  going time,
  fromstation int,
  tostation int,
  extratxt      text,
  sun int,
  sat int,
  extratxthandled int
);


